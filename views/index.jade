                                        i.material-icons archive
                                    a(href='/destroy/{{todo._id}}')
                                        i.material-icons delete
                                    a(href='/switch/{{todo._id}}')
                                        i(class='material-icons ' + state + '-text') arrow_forward
                .col.s12.m7.l4
